{
  "compilerOptions": {
    "target": "es2015",
    "module": "ES2015",
    "outDir": "./lib/esm",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src"]
}
